<record
	name="event"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

		<!-- data -->

		<type-field/>

	</fields>

	<collections>

		<children-list
			type="event-link"/>

	</collections>

</record>