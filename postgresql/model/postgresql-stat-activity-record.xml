<record
	name="postgresql-stat-activity"
	type="common"
	create="no"
	mutable="no"
	table="pg_stat_activity">

	<fields>

		<!-- id -->

		<assigned-id-field
			column="procpid"/>

		<!-- data -->

		<string-field
			name="database-name"
			column="datname"/>

		<string-field
			name="user-name"
			column="usename"/>

		<string-field
			name="current-query"
			column="current_query"/>

	</fields>

</record>