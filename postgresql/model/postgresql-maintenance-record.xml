<record
	name="postgresql-maintenance"
	type="ephemeral">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<!-- TODO -->

		<!-- data -->

		<enum-field
			name="frequency"
			type="postgresql-maintenance-frequency"/>

		<integer-field
			name="sequence"/>

		<!-- settings -->

		<string-field
			name="command"/>

		<!-- state -->

		<timestamp-field
			name="last-run"
			column-type="postgresql"
			nullable="yes"/>

		<integer-field
			name="last-duration"
			nullable="yes"/>

		<string-field
			name="last-output"
			nullable="yes"/>

	</fields>

</record>