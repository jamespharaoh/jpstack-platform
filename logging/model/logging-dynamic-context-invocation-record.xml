<record
	name="logging-dynamic-context-invocation"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="parent-context"
			type="logging-dynamic-context"/>

		<identity-reference-field
			name="child-context"
			type="logging-dynamic-context"/>

		<!-- details -->

		<timestamp-field
			name="first-seen"
			column-type="postgresql"/>

		<timestamp-field
			name="last-seen"
			column-type="postgresql"/>

		<integer-field
			name="num-calls"
			default="0"/>

	</fields>

</record>