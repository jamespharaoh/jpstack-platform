<record
	name="user-online"
	type="ephemeral">

	<fields>

		<!-- id -->

		<foreign-id-field
			field="user"/>

		<!-- identity -->

		<master-field
			type="user"/>

		<!-- state -->

		<string-field
			name="session-id"/>

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

		<reference-field
			type="user-session"/>

	</fields>

</record>