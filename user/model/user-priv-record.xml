<record
	name="user-priv"
	type="ephemeral">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="user"/>

		<identity-reference-field
			type="priv"/>

		<!-- state -->

		<yes-no-field
			name="can"
			default="no"/>

		<yes-no-field
			name="can-grant"
			default="no"/>

	</fields>

</record>